<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<GridPane fx:controller="jp.naist.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="20" vgap="20">
    <VBox prefWidth="800" alignment="CENTER">
        <VBox alignment="CENTER">
            <Text fx:id="foreText" textAlignment="CENTER" wrappingWidth="800">
                Fore text
            </Text>
            <TextField fx:id="answerTextField" maxWidth="150" minWidth="150" onKeyPressed="#handleAnswerEntered">

            </TextField>
            <Text fx:id="postText" textAlignment="CENTER" wrappingWidth="800">
                post text
            </Text>
        </VBox>
        <Text fx:id="resultText">

        </Text>
        <Button fx:id="nextButton" onMouseClicked="#handleNextButtonPressed">
            Next
        </Button>
    </VBox>
</GridPane>